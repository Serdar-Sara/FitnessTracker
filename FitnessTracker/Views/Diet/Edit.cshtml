@model Fitness_Tracker.Models.Entities.Diet

<h2>Edit Diet</h2>
<form asp-action="Edit" method="post">
    <!-- Hidden fields -->
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" /> <!-- Added hidden UserId -->
    <!-- MealType -->
    <div class="form-group">
        <label asp-for="MealType"></label>
        <input asp-for="MealType" class="form-control" />
        <span asp-validation-for="MealType" class="text-danger"></span>
    </div>

    <!-- CaloriesConsumed -->
    <div class="form-group">
        <label asp-for="CaloriesConsumed"></label>
        <input asp-for="CaloriesConsumed" type="number" class="form-control" />
        <span asp-validation-for="CaloriesConsumed" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <!-- Date -->
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Get" class="btn btn-secondary">Cancel</a>
</form>
