@model IEnumerable<Fitness_Tracker.Models.Entities.Diet>

<h2>Diet Records</h2>
<a asp-action="Add" class="btn btn-primary">Add New Diet</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Meal Type</th>
            <th>Calories</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diet in Model)
        {
            <tr>
                <td>@diet.Id</td>
                <td>@diet.MealType</td>
                <td>@diet.CaloriesConsumed</td>
                <td>@diet.Description</td>
                <td>@diet.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@diet.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@diet.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
